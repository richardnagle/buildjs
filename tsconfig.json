{
  "compilerOptions": {
    "target": "ES6",
    "noLib": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "experimentalAsyncFunctions": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ]
}